{
  "name": "vivla-guides-backend",
  "version": "1.0.0",
  "description": "Backend Node.js con Express y Sequelize para VIVLA Guides",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "lint": "eslint .",
    "migrate": "sequelize db:migrate",
    "seed": "sequelize db:seed:all",
    "reset:db": "sequelize db:migrate:undo:all && sequelize db:migrate && sequelize db:seed:all",
    "import:json": "node scripts/seed-from-json.js"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.1.0",
    "firebase-admin": "^13.4.0",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "joi": "^17.13.3",
    "mime-types": "^3.0.1",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "nodemon": "^3.1.7",
    "sequelize-cli": "^6.6.2"
  }
}
